{{!< default}}

{{> header}}

<main class="content" role="main">
    <article class="{{post_class}}">
        {{#post}}
            <div class="container">
                <h1 class="post-title">{{{title}}}</h1>
                <p class="post-meta">
                    <span class="post-meta-time"> <span class="fa fa-clock-o"></span> <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
                    <span class="post-meta-tags">{{tags prefix="<span class=\"fa fa-tag\"></span> "}}</span>
                </p>

                <section class="post-content">
                    {{content}}
                </section>
            </div>
            <footer class="post-footer">
                <div class="container">
                    <section class="author">
                        <div class="author-wrapper">
                            <img class="author-image" src="{{asset "images/author.jpg"}}">
                            <div class="author-meta clearfix">
                                <p class="author-name">{{author.name}}</p>
                                <ul>
                                    {{#if author.location}}<li><span class="fa fa-map-marker"></span> {{author.location}}</li>{{/if}}
                                    {{#if author.website}}<li><span class="fa fa-globe"></span> <a href="{{author.website}}">{{author.website}}</a></li>{{/if}}
                                </ul>

                                <p class="author-bio">{{author.bio}}</p>

                                <p class="share">
                                    Share this post on 
                                    <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                        <span class="fa fa-twitter fa-fw"></span>
                                    </a>
                                    <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                        <span class="fa fa-facebook fa-fw"></span>
                                    </a>
                                    <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                        <span class="fa fa-google-plus fa-fw"></span>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </section>
                </div>
            </footer>

            {{/post}}

        </article>
    </div>
</main>
